{
  "name": "altercode",
  "displayName": "AlterCode",
  "description": "Reliability-first AI coding assistant with verification and mission control",
  "version": "2.0.0",
  "publisher": "altercode",
  "repository": {
    "type": "git",
    "url": "https://github.com/kunho817/AlterCode.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "assistant",
    "code generation",
    "refactoring",
    "claude",
    "gpt",
    "verification"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "altercode.showMissionControl",
        "title": "Show Mission Control",
        "category": "AlterCode"
      },
      {
        "command": "altercode.newMission",
        "title": "New Mission",
        "category": "AlterCode"
      },
      {
        "command": "altercode.explainFile",
        "title": "Explain This File",
        "category": "AlterCode"
      },
      {
        "command": "altercode.findIssues",
        "title": "Find Issues",
        "category": "AlterCode"
      },
      {
        "command": "altercode.refactorSelection",
        "title": "Refactor Selection",
        "category": "AlterCode"
      },
      {
        "command": "altercode.cancelExecution",
        "title": "Cancel Execution",
        "category": "AlterCode"
      },
      {
        "command": "altercode.openSettings",
        "title": "Open Settings",
        "category": "AlterCode"
      },
      {
        "command": "altercode.showOutput",
        "title": "Show Output",
        "category": "AlterCode"
      },
      {
        "command": "altercode.showPendingApprovals",
        "title": "Show Pending Approvals",
        "category": "AlterCode"
      },
      {
        "command": "altercode.setApprovalMode",
        "title": "Set Approval Mode",
        "category": "AlterCode"
      },
      {
        "command": "altercode.showConflicts",
        "title": "Show Merge Conflicts",
        "category": "AlterCode"
      },
      {
        "command": "altercode.approveAll",
        "title": "Approve All Pending",
        "category": "AlterCode"
      },
      {
        "command": "altercode.addToMission",
        "title": "Add to Mission Context",
        "category": "AlterCode"
      },
      {
        "command": "altercode.analyzeDependencies",
        "title": "Analyze Dependencies",
        "category": "AlterCode"
      },
      {
        "command": "altercode.showMissionContext",
        "title": "Show Mission Context",
        "category": "AlterCode"
      },
      {
        "command": "altercode.clearMissionContext",
        "title": "Clear Mission Context",
        "category": "AlterCode"
      },
      {
        "command": "altercode.explainSelection",
        "title": "Explain Selection",
        "category": "AlterCode"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "altercode",
          "title": "AlterCode",
          "icon": "$(hubot)"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "altercode.chatView",
          "name": "AlterCode Chat"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "altercode.explainFile",
          "group": "altercode@1"
        },
        {
          "command": "altercode.findIssues",
          "group": "altercode@2"
        },
        {
          "command": "altercode.refactorSelection",
          "group": "altercode@3",
          "when": "editorHasSelection"
        },
        {
          "command": "altercode.addToMission",
          "group": "altercode@4"
        },
        {
          "command": "altercode.analyzeDependencies",
          "group": "altercode@5"
        },
        {
          "command": "altercode.explainSelection",
          "group": "altercode@6",
          "when": "editorHasSelection"
        }
      ],
      "commandPalette": [
        {
          "command": "altercode.showMissionControl"
        },
        {
          "command": "altercode.newMission"
        },
        {
          "command": "altercode.explainFile",
          "when": "editorIsOpen"
        },
        {
          "command": "altercode.findIssues",
          "when": "editorIsOpen"
        },
        {
          "command": "altercode.refactorSelection",
          "when": "editorHasSelection"
        },
        {
          "command": "altercode.cancelExecution"
        },
        {
          "command": "altercode.openSettings"
        },
        {
          "command": "altercode.showOutput"
        },
        {
          "command": "altercode.showPendingApprovals"
        },
        {
          "command": "altercode.setApprovalMode"
        },
        {
          "command": "altercode.showConflicts"
        },
        {
          "command": "altercode.approveAll"
        },
        {
          "command": "altercode.addToMission",
          "when": "editorIsOpen"
        },
        {
          "command": "altercode.analyzeDependencies",
          "when": "editorIsOpen"
        },
        {
          "command": "altercode.showMissionContext"
        },
        {
          "command": "altercode.clearMissionContext"
        },
        {
          "command": "altercode.explainSelection",
          "when": "editorHasSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "altercode.showMissionControl",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "altercode.newMission",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      },
      {
        "command": "altercode.addToMission",
        "key": "ctrl+shift+q",
        "mac": "cmd+shift+q",
        "when": "editorTextFocus"
      },
      {
        "command": "altercode.analyzeDependencies",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      },
      {
        "command": "altercode.showMissionContext",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      },
      {
        "command": "altercode.showConflicts",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      }
    ],
    "configuration": {
      "title": "AlterCode",
      "properties": {
        "altercode.claude.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Claude (used for higher-tier agents: Sovereign, Overlord, Lord)"
        },
        "altercode.claude.model": {
          "type": "string",
          "default": "claude-opus-4-5-20251101",
          "description": "Claude model to use for higher-tier agents"
        },
        "altercode.claude.mode": {
          "type": "string",
          "enum": [
            "api",
            "cli"
          ],
          "default": "api",
          "description": "How to access Claude: 'api' for direct API with key, 'cli' for Claude Code CLI"
        },
        "altercode.claude.cliPath": {
          "type": "string",
          "default": "claude",
          "description": "Path to Claude Code CLI executable (only used when mode is 'cli')"
        },
        "altercode.claude.timeout": {
          "type": "number",
          "default": 300000,
          "description": "Request timeout in milliseconds (default: 5 minutes)"
        },
        "altercode.glm.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for GLM (used for Worker tier agents)"
        },
        "altercode.glm.model": {
          "type": "string",
          "default": "glm-4.7",
          "description": "GLM model to use for Worker tier agents"
        },
        "altercode.glm.endpoint": {
          "type": "string",
          "default": "https://api.z.ai/api/coding/paas/v4/chat/completions",
          "description": "GLM API endpoint URL"
        },
        "altercode.maxContextTokens": {
          "type": "number",
          "default": 128000,
          "description": "Maximum context window size in tokens"
        },
        "altercode.llm.enableFallback": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic fallback to GLM when Claude fails"
        },
        "altercode.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "description": "Logging level"
        },
        "altercode.verification.strictness": {
          "type": "string",
          "enum": [
            "strict",
            "standard",
            "lenient"
          ],
          "default": "standard",
          "description": "Verification strictness level"
        },
        "altercode.ui.showQuotaInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show quota percentage in status bar"
        },
        "altercode.ui.notifyOnApprovalRequired": {
          "type": "boolean",
          "default": true,
          "description": "Show notification when approval is required"
        },
        "altercode.ui.notifyOnQuotaWarning": {
          "type": "boolean",
          "default": true,
          "description": "Show notification on quota warnings"
        },
        "altercode.ui.useReactUI": {
          "type": "boolean",
          "default": false,
          "description": "Enable the new React-based UI (experimental)"
        },
        "altercode.activity.maxDisplayEntries": {
          "type": "number",
          "default": 100,
          "description": "Maximum activity entries to display"
        },
        "altercode.conflicts.autoResolveSimple": {
          "type": "boolean",
          "default": true,
          "description": "Auto-resolve simple non-overlapping conflicts"
        },
        "altercode.approval.defaultMode": {
          "type": "string",
          "enum": [
            "full_automation",
            "step_by_step",
            "fully_manual"
          ],
          "default": "step_by_step",
          "description": "Default approval mode for changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:webview && npm run build:extension",
    "build:extension": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "build:webview": "cd webview-ui && npm run build",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "watch:webview": "cd webview-ui && npm run dev",
    "dev": "concurrently \"npm run watch\" \"npm run watch:webview\"",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:dev": "tsc --project tsconfig.dev.json --noEmit"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "level": "^8.0.0",
    "sql.js": "^1.9.0",
    "uuid": "^9.0.1"
  }
}
